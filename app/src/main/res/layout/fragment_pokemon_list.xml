<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".PokemonList">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        
        
        <com.mancj.materialsearchbar.MaterialSearchBar
                android:id="@+id/search_bar"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mt_speechMode="false"
                android:visibility="gone"></com.mancj.materialsearchbar.MaterialSearchBar>



        <android.support.v7.widget.RecyclerView
                android:id="@+id/pokemon_recyclerview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"></android.support.v7.widget.RecyclerView>


    </LinearLayout>

</FrameLayout>